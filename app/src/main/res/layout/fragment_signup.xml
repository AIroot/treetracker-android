<?xml version="1.0" encoding="utf-8"?>
    
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_signup_scroll" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_gravity="center"
    android:fillViewport="true"
    android:background="#FFFFFFFF"
    android:layout_below="@+id/fragment_signup_logo"
    >

<RelativeLayout
    android:orientation="vertical" android:padding="0dip"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:id="@+id/fragment_signup">
    
    <ImageView 
        android:id="@+id/fragment_signup_logo" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:contentDescription="logo"
        android:layout_alignParentTop="true"
        />
    

    
    <EditText
        android:id="@+id/fragment_signup_first_name" 
    	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="text"
        android:hint="@string/first_name"
        android:layout_below="@+id/fragment_signup_logo"
        />
    
    <EditText
        android:id="@+id/fragment_signup_last_name" 
    	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="text"
        android:hint="@string/last_name"
        android:layout_below="@+id/fragment_signup_first_name"
        />
    
   <EditText
        android:id="@+id/fragment_signup_email_address" 
    	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="textEmailAddress"
        android:hint="@string/email_address"
        android:layout_below="@+id/fragment_signup_last_name"
        />
   
   <EditText
        android:id="@+id/fragment_signup_password" 
    	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:layout_below="@+id/fragment_signup_email_address"
        />
   
       
    <EditText
        android:id="@+id/fragment_signup_organization" 
    	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="text"
        android:hint="@string/organization"
        android:layout_below="@+id/fragment_signup_password"
        />
    
    <EditText
        android:id="@+id/fragment_signup_phone_number" 
    	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="phone"
        android:hint="@string/phone_number"
        android:layout_below="@+id/fragment_signup_organization"
        />
    
    <Button
        android:id="@+id/fragment_signup_signup"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/sign_up"
        android:textColor="#FF916B4A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/white_gray_gradient"
        android:layout_below="@+id/fragment_signup_phone_number"
        />

        
        <TextView 
	        android:id="@+id/fragment_signup_login_already_have_account"
	    	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dp"
	        android:layout_marginTop="24dp"
	        android:textSize="16sp"
			android:lines="1"
			android:textColorLink="#FF916B4A"
			android:clickable="true"
	        android:gravity="center_horizontal|center_vertical"
	        android:layout_below="@+id/fragment_signup_signup"
			android:text="@string/already_have_account"
	        />
 
  
      
</RelativeLayout>

</ScrollView>
